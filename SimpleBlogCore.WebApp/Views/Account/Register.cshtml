@model RegisterViewModel

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="main" class="s-content__main large-8 column">

        <h2>Registration</h2>

        <div>

            <form asp-action="Register" asp-controller="Account" asp-antiforgery="true">

                <div asp-validation-summary="ModelOnly">
                    Errors:
                </div>

                <div>
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email"></span>
                    <input type="email" asp-for="Email" class="h-full-width" />
                </div>

                <div>
                    <label asp-for="UserName"></label>
                    <span asp-validation-for="UserName"></span>
                    <input type="text" asp-for="UserName" class="h-full-width" />
                </div>

                <div>
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password"></span>
                    <input type="password" asp-for="Password" class="h-full-width" />
                </div>

                <div>
                    <label asp-for="ConfirmPassword"></label>
                    <span asp-validation-for="ConfirmPassword"></span>
                    <input type="password" asp-for="ConfirmPassword" class="h-full-width" />
                </div>

                <div>
                    <input class="btn--primary h-full-width" type="submit" value="Register" />
                </div>

            </form>

        </div>
    </div>
</div>
